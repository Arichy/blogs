{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blog Configuration",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["series", "article"],
      "default": "article",
      "description": "The type of the content. 'series' for a collection of posts, 'article' for a single post."
    },
    "title": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string",
          "description": "English title of the series/article"
        },
        "zh": {
          "type": "string",
          "description": "Chinese title of the series/article"
        }
      },
      "required": ["en"],
      "description": "Titles in different languages"
    },
    "wip": {
      "type": "boolean",
      "default": false,
      "description": "Whether this content is a Work In Progress. If true, it may be hidden from the generated index."
    }
  },
  "required": ["title"]
}
